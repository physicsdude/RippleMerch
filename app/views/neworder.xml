<Alloy>
	<Window id="newOrderWin" title="New Order" class="container" modal="false">
		<ImageView id="logoImageSmall"/>
		<Label id="label" >Accept a Payment</Label>
		<TextField id="priceField" hintText="How Much?" onReturn="closeKeyboard"/>		
		<Picker id="currencyField" selectionIndicator="true" useSpinner="true">
			<PickerColumn id="column1">
				<PickerRow title="XRP"/>
				<PickerRow title="BTC"/>
				<PickerRow title="LTC"/>
				<PickerRow title="PPC"/>
				<PickerRow title="EUR"/>
				<PickerRow title="USD"/>
			</PickerColumn>
		</Picker>
		<Button class="button" id="generateCode" onClick="newOrder">Get Paid</Button>
	</Window>
</Alloy>