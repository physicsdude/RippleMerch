<Alloy>
	<Window id="loginWin" title="Merchant" class="container" modal="false">
		<ImageView id="logoImage"/>
		<TextField id="walletNameField" hintText="What's Your Wallet Name?" onReturn="closeKeyboard"/>
		<Button class="button" onClick="login">Accept Payments</Button>
		<Label id="createWalletLabel" class="button" onClick="login">Don't Have a Wallet?</Label>
		<Button id="createWallet" class="button" onClick="login">Create One For Free</Button>
	</Window>
</Alloy>